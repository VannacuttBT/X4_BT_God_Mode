<?xml version="1.0" encoding="utf-8"?>
<mdscript name="X4_BT_God_Mode" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="md.xsd">
    <cues>
        <!-- Notify Player -->
        <cue name="BTGM_Player_Notify" instantiate="false" checktime="player.age + 20000ms" namespace="this">
            <actions>
                <show_notification text="'BaerTec Inc.' + '\n' + {1015,70}" sound="notification_warning" comment="Hack activated"/>
            </actions>
        </cue>

        <!-- Make Player Primary Ship invincible -->
        <cue name="BTGM_Player_Ship_Invincible" instantiate="true" checktime="player.age + 20000ms" checkinterval="20s" namespace="this">
            <actions>
                <!-- Player Ship -->
                <restore_object object="player.ship" hull="100" recursive="true" />
                <set_object_min_hull object="player.ship" exact="100"/>

                <!-- Player Ship Components -->
                <find_object_component name="$BTGM_PlayerShip_Component_List" object="player.ship" class="class.destructible" multiple="true"/>
                <do_for_each in="$BTGM_PlayerShip_Component_List" name="$BTGM_PlayerShip_Component">
                    <do_if value="$BTGM_PlayerShip_Component != null">
                        <restore_object object="$BTGM_PlayerShip_Component" hull="100" recursive="true" />
                        <set_object_min_hull object="$BTGM_PlayerShip_Component" exact="100"/>
                    </do_if>
                </do_for_each>
            </actions>
        </cue>

        <!-- Make Player Ships, Stations and Components invincible -->
        <cue name="BTGM_Player_Owned_Invincible" instantiate="true" checktime="player.age + 20000ms" checkinterval="20s" namespace="this">
            <actions>
                <!-- Player Ships -->
                <find_ship name="$BTGM_Ship_List" class="[class.ship_xs, class.ship_s, class.ship_m, class.ship_l, class.ship_xl]" owner="faction.player" space="player.galaxy" multiple="true" />
                <do_for_each in="$BTGM_Ship_List" name="$BTGM_Ship">
                    <!-- Ship -->
                    <restore_object object="$BTGM_Ship" hull="100" recursive="true" />
                    <set_object_min_hull object="$BTGM_Ship" exact="100"/>

                    <!-- Ship Components -->
                    <find_object_component name="$BTGM_Ship_Component_List" object="$BTGM_Ship" class="class.destructible" multiple="true"/>
                    <do_for_each in="$BTGM_Ship_Component_List" name="$BTGM_Ship_Component">
                        <do_if value="$BTGM_Ship_Component != null">
                            <restore_object object="$BTGM_Ship_Component" hull="100" recursive="true" />
                            <set_object_min_hull object="$BTGM_Ship_Component" exact="100"/>
                        </do_if>
                    </do_for_each>
                </do_for_each>

                <!-- Player Stations -->
                <find_station name="$BTGM_Station_List" owner="faction.player" space="player.galaxy" multiple="true" />
                <do_for_each in="$BTGM_Station_List" name="$BTGM_Station">
                    <!-- Station -->
                    <restore_object object="$BTGM_Station" hull="100" recursive="true" />
                    <set_object_min_hull object="$BTGM_Station" exact="100"/>

                    <!-- Station Components -->
                    <find_object_component name="$BTGM_Station_Component_List" object="$BTGM_Station" class="class.destructible" multiple="true"/>
                    <do_for_each in="$BTGM_Station_Component_List" name="$BTGM_Station_Component">
                        <do_if value="$BTGM_Station_Component != null">
                            <restore_object object="$BTGM_Station_Component" hull="100" recursive="true" />
                            <set_object_min_hull object="$BTGM_Station_Component" exact="100"/>
                        </do_if>
                    </do_for_each>
                </do_for_each>
            </actions>
        </cue>
    </cues>
</mdscript>
